<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kgc.bbs.dao.BbsSortDao">

    <select id="queryAllSort" resultType="com.kgc.bbs.beans.BbsSort">
        select * from bbs_sort
    </select>

    <select id="querySortById" resultType="com.kgc.bbs.beans.BbsSort">
        select *
        from bbs_sort
        where id=#{id}
    </select>

</mapper>